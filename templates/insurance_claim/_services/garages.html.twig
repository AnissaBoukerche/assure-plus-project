{% extends 'base.html.twig' %}
	
{% block stylesheets %}	
	{{parent()}}
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"/>
	{{encore_entry_link_tags('map-css')}}
{% endblock %}
{% block title %}Services{% endblock %}

{% block body %}
<!-- Section Services-->
	<section>
		<h1 class="mt-5 pt-3 ps-2">Garages de réparation partenaires</h1>
		<p class="ps-2"> Veuillez choisir le garage le plus proche de votre emplacement :</p>
		<div id="map"></div>
		<p class="mt-2 ps-2"> Veuillez cliquer sur le point de repère du garage le plus proche si vous souhaitez être contactés directement par téléphone.</p>
		<a href="{{path('app_insurance_claim_garages')}}"></a>
	</section>
	<!-- End of section Services -->
	<!-- Section Modal -->
	<section>
		<div class="modal fade" id="modalGarages" tabindex="-1" aria-labelledby="modalGaragesLabel" aria-hidden="true">
  			<div class="modal-dialog">
    		<div class="modal-content">
      		<div class="modal-header">
        		<h2 class="modal-title h5" id="modalGaragesLabel">Vous avez demandé à être contacté par notre garage</h2>
        		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      		</div>
      		<div class="modal-body">
	  			<p>Nous allons vous contacter dans:</p>
        		<div class="text-center "id="timer2">30:00</div>
      		</div>
      		<div class="modal-footer">
       		 <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
      		</div>
    		</div>
  			</div>
		</div>
	</section>
{% endblock %}
{% block javascripts %}
	{{parent()}}
	<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
	{{encore_entry_script_tags('map-garages')}}
{% endblock %}
	
